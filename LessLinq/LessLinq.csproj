<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net452;net46;netstandard2.0;net6.0;net7.0</TargetFrameworks>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <Description>LINQ Extensions</Description>
    <Authors>Jelle Kerkstra</Authors>
    <PackageProjectUrl>https://github.com/jellekerkstra/LessLinq</PackageProjectUrl>
    <RepositoryUrl>https://github.com/jellekerkstra/LessLinq</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>linq extensions</PackageTags>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="NeinLinq" Version="6.1.1" />
    <PackageReference Include="ReflEx" Version="0.4.0" />
  </ItemGroup>

</Project>
